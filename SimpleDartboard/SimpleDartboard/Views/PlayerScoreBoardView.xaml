<UserControl x:Class="SimpleDartboard.Views.PlayerScoreBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Vertical">
                <materialDesign:Card Padding="16" Margin="8">
                    <StackPanel>
                        <Label Content="Spieler:" FontSize="45" FontWeight="Bold" />
                        <Label Content="{Binding Name}" FontSize="40" />
                        <Label Content="{Binding CurrentScore}" FontSize="100" FontWeight="Bold" />
                        <Label Content="{Binding AverageScore}" FontSize="20" />
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>