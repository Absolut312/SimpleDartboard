<UserControl x:Class="SimpleDartboard.Views.DartGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SimpleDartboard.Views"
             xmlns:viewmodels="clr-namespace:SimpleDartboard.PAL.ViewModels;assembly=SimpleDartboard.PAL"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <DataTemplate x:Name="playerScoreBoardViewTemplate" DataType="{x:Type viewmodels:PlayerScoreBoardViewModel}">
            <local:PlayerScoreBoardView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Name="dartBoardScoreControlViewTemplate"
                      DataType="{x:Type viewmodels:DartBoardScoreControlViewModel}">
            <local:DartBoardScoreControlView DataContext="{Binding}" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <materialDesign:Card Padding="16" Margin="8">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Neustart" Command="{Binding ResetGameCommand}" />
                    <Button Content="Letzte Aktion entfernen" Command="{Binding UndoLastScoreActionCommand}" />
                    <Button Content="Spieler wechseln" Command="{Binding SwitchPlayerCommand}" />
                </StackPanel>
            </materialDesign:Card>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0">
            <materialDesign:Card Padding="16" Margin="8">
                <StackPanel>
                    <ContentControl Content="{Binding DartBoardScoreControl}" />
                    <Label Content="{Binding AverageScore}" FontSize="20" />
                </StackPanel>
            </materialDesign:Card>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="0">
            <ContentControl Content="{Binding SelectedPlayer}" />
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="1">
            <ContentControl Content="{Binding OpponentPlayer}" />
        </DockPanel>
    </Grid>
</UserControl>